// C++ code
//
void setup()
{
  pinMode(0, OUTPUT);
  pinMode(1, OUTPUT);
  pinMode(2, OUTPUT);
}

void loop()
{
  digitalWrite(0, HIGH);
  digitalWrite(1, LOW);
  digitalWrite(2, LOW);
  delay(1000); // Wait for 1000 millisecond(s)
  
  digitalWrite(1, HIGH);
  digitalWrite(0, LOW);
  digitalWrite(2, LOW);
  delay(1000); // Wait for 1000 millisecond(s)
  
  digitalWrite(2, HIGH);
  digitalWrite(0, LOW);
  digitalWrite(1, LOW);
  delay(1000); // Wait for 1000 millisecond(s)
}
